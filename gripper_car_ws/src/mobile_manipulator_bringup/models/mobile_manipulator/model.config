<?xml version="1.0"?>
<model>
  <name>mobile_manipulator</name>
  <version>1.0</version>
  <sdf version="1.7">model.sdf</sdf>

  <author>
    <name>Mobile Manipulator Team</name>
    <email>user@example.com</email>
  </author>

  <description>
    A 4-wheel differential drive mobile base with a 4-DOF robotic arm and gripper.
    The mobile base has 4 wheels controlled by a differential drive plugin.
    The manipulator arm has 4 joints for positioning and a 2-finger gripper for grasping.
  </description>

  <depend>
    <model>
      <uri>model://ground_plane</uri>
    </model>
  </depend>
</model>
