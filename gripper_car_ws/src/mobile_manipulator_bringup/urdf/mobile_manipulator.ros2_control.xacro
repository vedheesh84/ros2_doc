<?xml version="1.0"?>
<!--
  ROS2_CONTROL CONFIGURATION - Mobile Manipulator
  ================================================

  DESCRIPTION:
    ros2_control hardware interface for mobile manipulator
    Defines command and state interfaces for all actuated joints

  HARDWARE INTERFACES:
    - Mock/Fake: For testing without hardware
    - Gazebo: For simulation
    - Real: For actual hardware via Arduino bridge

  CONTROLLED JOINTS:
    ARM: joint_1, joint_2, joint_3, joint_4, gripper_base_joint, left_gear_joint
    BASE: Handled separately by unified_hardware_bridge (not in ros2_control)
-->

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="mobile_manipulator_ros2_control" params="hardware_interface use_sim">

    <ros2_control name="MobileManipulatorSystem" type="system">

      <!-- ============================================================ -->
      <!-- HARDWARE PLUGIN SELECTION -->
      <!-- ============================================================ -->

      <hardware>
        <xacro:if value="${use_sim}">
          <!-- Gazebo simulation -->
          <plugin>gazebo_ros2_control/GazeboSystem</plugin>
        </xacro:if>

        <xacro:unless value="${use_sim}">
          <!-- Real hardware or mock -->
          <plugin>${hardware_interface}</plugin>
          <param name="example_param_write_for_sec">2</param>
          <param name="example_param_read_for_sec">2</param>
        </xacro:unless>
      </hardware>

      <!-- ============================================================ -->
      <!-- ARM JOINT INTERFACES -->
      <!-- ============================================================ -->

      <!--
        NOTE: Mobile base (wheels) are NOT controlled via ros2_control
        They are controlled directly by unified_hardware_bridge via /cmd_vel
        Only the ARM joints are in ros2_control for MoveIt integration
      -->

      <!-- Joint 1 (Base Rotation) -->
      <joint name="joint_1">
        <command_interface name="position">
          <param name="min">-3.14159</param>
          <param name="max">3.14159</param>
        </command_interface>
        <command_interface name="velocity"/>
        <state_interface name="position">
          <!-- Initial position (radians) -->
          <param name="initial_value">0.0</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>

      <!-- Joint 2 (Shoulder) -->
      <joint name="joint_2">
        <command_interface name="position">
          <param name="min">-1.57079</param>
          <param name="max">1.57079</param>
        </command_interface>
        <command_interface name="velocity"/>
        <state_interface name="position">
          <param name="initial_value">0.0</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>

      <!-- Joint 3 (Elbow) -->
      <joint name="joint_3">
        <command_interface name="position">
          <param name="min">-1.57079</param>
          <param name="max">1.57079</param>
        </command_interface>
        <command_interface name="velocity"/>
        <state_interface name="position">
          <param name="initial_value">0.0</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>

      <!-- Joint 4 (Wrist) -->
      <joint name="joint_4">
        <command_interface name="position">
          <param name="min">-1.57079</param>
          <param name="max">1.57079</param>
        </command_interface>
        <command_interface name="velocity"/>
        <state_interface name="position">
          <param name="initial_value">0.0</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>

      <!-- Gripper Base Joint (Rotation) -->
      <joint name="gripper_base_joint">
        <command_interface name="position">
          <param name="min">-3.14159</param>
          <param name="max">3.14159</param>
        </command_interface>
        <command_interface name="velocity"/>
        <state_interface name="position">
          <param name="initial_value">0.0</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>

      <!-- Left Gear Joint (Gripper Open/Close) -->
      <joint name="left_gear_joint">
        <command_interface name="position">
          <param name="min">0.0</param>
          <param name="max">0.7854</param>  <!-- 45 degrees -->
        </command_interface>
        <command_interface name="velocity"/>
        <state_interface name="position">
          <param name="initial_value">0.0</param>  <!-- Closed -->
        </state_interface>
        <state_interface name="velocity"/>
      </joint>

      <!-- Right gear joint is mimic, not controlled directly -->

    </ros2_control>

  </xacro:macro>

</robot>
