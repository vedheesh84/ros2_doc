<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_robot_car">
<xacro:property name="width" value="0.03" />
<xacro:property name="bodyrad" value="0.0425" />

  <material name="blue">
    <color rgba="0 0 0.8 1"/>       
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

 <link name="world"/>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
      <material name="white"/>
      <origin xyz="0 0 0.0925"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0.0925"/>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>

  </link>

  <joint name="world_to_body" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.0075"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="${bodyrad}" length="${width}"/>
      </geometry>
      <origin rpy="1.5708  0 0"/>
      <material name="black"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0.0925"/>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>

  </link>

  <joint name="body_right_wheel" type="continuous">
      <parent link="base_link"/>
      <child link="right_wheel"/>
      <origin xyz="0.1 0.11 0.0425"/>
      <axis xyz="0 1 0"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="${bodyrad}" length="${width}"/>
      </geometry>
      <origin rpy="1.5708 0 0"/>
      <material name="black"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0.0925"/>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>

  </link>

  <joint name="body_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.1 -0.11 0.0425"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="center_spherical_wheel">
    <visual>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0.0925"/>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>

  </link>

  <joint name="body_center_spherical_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="center_spherical_wheel"/>
    <origin xyz="-0.1 0 0.0425"/>
  </joint>
    
</robot>