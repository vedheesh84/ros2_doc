
<!--Simple URDF model: A single base link represented as a cylinder.-->

<?xml version="1.0"?>

<robot name="my_first_robot">

  <!-- Base link of the robot -->
  <link name="base_link">
    
    <!-- Visual representation of the link -->
    <visual>
      <geometry>
      <!--        height = 0.6m, radius = 0.2m -->
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
      <!--        Add color and material for better visualization -->
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>

    <!--          Add collision and inertia for physics simulation -->
    <collision>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0"
               izz="0.1"/>
    </inertial>

  </link>

</robot>

