xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mobilebot">

  <!-- Materials --><?
  <material name="red"><color rgba="1 0 0 1"/></material>
  <material name="green"><color rgba="0 1 0 1"/></material>
  <material name="blue"><color rgba="0 0 1 1"/></material>
  <material name="yellow"><color rgba="1 1 0 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>

  <!-- Base -->
  <link name="base_link"/>

  <!-- Chassis -->
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="-0.1 0 0" rpy="0 0 0"/>
  </joint>
  <link name="chassis">
    <visual>
      <origin xyz="0.15 0 0.075"/>
      <geometry><box size="0.35 0.25 0.15"/></geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0.15 0 0.075"/>
      <geometry><box size="0.35 0.25 0.15"/></geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0.15 0 0.075"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Wheels -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0.1 0.14 0" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="left_wheel">
    <visual>
      <geometry><cylinder radius="0.06" length="0.03"/></geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.06" length="0.03"/></geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0.1 -0.14 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  <link name="right_wheel">
    <visual>
      <geometry><cylinder radius="0.06" length="0.03"/></geometry>
      <material name="green"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.06" length="0.03"/></geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Caster -->
  <joint name="caster_joint" type="fixed">
    <parent link="chassis"/>
    <child link="caster"/>
    <origin xyz="0.24 0 0"/>
  </joint>
  <link name="caster">
    <visual>
      <geometry><sphere radius="0.06"/></geometry>
      <material name="yellow"/>
    </visual>
    <collision>
      <geometry><sphere radius="0.06"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="1e-5" iyy="1e-5" izz="1e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <gazebo reference="caster">
    <material>Gazebo/Black</material>
    <mu1 value="0.001"/><mu2 value="0.001"/>
  </gazebo>

  <!-- Camera -->
  <joint name="front_camera_joint" type="fixed">
    <parent link="chassis"/>
    <child link="front_camera_link"/>
    <origin xyz="0.325 0 0.075"/>
  </joint>
  <link name="front_camera_link">
    <visual>
      <geometry><box size="0.08 0.06 0.06"/></geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry><box size="0.08 0.06 0.06"/></geometry>
    </collision>
    <inertial>
      <mass value="0.08"/>
      <inertia ixx="5e-5" iyy="5e-5" izz="5e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <gazebo reference="front_camera_link">
    <sensor name="front_camera" type="camera">
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <camera>
        <horizontal_fov>1.0472</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.05</near>
          <far>50</far>
        </clip>
      </camera>
      <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
        <ros>
          <namespace>/</namespace>
        </ros>
        <frame_name>front_camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Lidar -->
  <joint name="lidar_joint" type="fixed">
    <parent link="chassis"/>
    <child link="lidar_link"/>
    <origin xyz="0.15 0 0.20"/>
  </joint>
  <link name="lidar_link">
    <visual>
      <geometry><cylinder radius="0.04" length="0.1"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.04" length="0.1"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1e-4" iyy="1e-4" izz="1e-4" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <gazebo reference="lidar_link">
    <sensor name="lidar_sensor" type="ray">
      <update_rate>10</update_rate>
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>20.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.001</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/</namespace>
          <remapping>scan:=/scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- IMU -->
  <joint name="imu_joint" type="fixed">
    <parent link="chassis"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>
  <link name="imu_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <update_rate>50</update_rate>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <imu>
        <angular_velocity>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.0001</stddev>
          </noise>
        </angular_velocity>
        <linear_acceleration>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.0001</stddev>
          </noise>
        </linear_acceleration>
      </imu>
      <plugin name="gazebo_ros_imu" filename="libgazebo_ros_imu.so">
        <ros>
          <namespace>/</namespace>
        </ros>
        <frame_name>imu_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
